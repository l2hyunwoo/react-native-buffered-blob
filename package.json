{
  "name": "react-native-nitro-blob-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "No more OOM, just use buffered-blob",
  "scripts": {
    "example:blob": "yarn workspace react-native-buffered-blob-example",
    "example:nitro": "yarn workspace react-native-nitro-buffered-blob-example",
    "native": "yarn workspace react-native-nitro-buffered-blob",
    "wrapper": "yarn workspace react-native-buffered-blob",
    "clean": "del-cli packages/react-native-nitro-buffered-blob/android/build packages/react-native-nitro-buffered-blob/lib packages/react-native-buffered-blob/lib examples/*/android/build examples/*/android/app/build examples/*/ios/build",
    "prepare": "yarn native prepare && yarn wrapper prepare",
    "nitrogen": "yarn native nitrogen",
    "typecheck": "yarn native typecheck && yarn wrapper typecheck",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l2hyunwoo/react-native-nitro-blob.git"
  },
  "author": "HyunWoo Lee <l2hyunwoo@gmail.com> (https://github.com/l2hyunwoo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/l2hyunwoo/react-native-nitro-blob/issues"
  },
  "homepage": "https://github.com/l2hyunwoo/react-native-nitro-blob#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.83.0",
    "@react-native/eslint-config": "0.83.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "lefthook": "^2.0.3",
    "prettier": "^2.8.8",
    "react": "19.2.0",
    "react-native": "0.83.0",
    "react-native-builder-bob": "^0.40.18",
    "react-native-nitro-modules": "^0.33.9",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "yarn@4.12.0",
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/examples/*/node_modules",
      "<rootDir>/packages/*/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  }
}
