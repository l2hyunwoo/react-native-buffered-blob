{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".yarnrc.yml"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "prepare": {
      "dependsOn": ["^prepare"],
      "outputs": ["lib/**", "nitrogen/**"]
    },
    "typecheck": {
      "dependsOn": ["^prepare"]
    },
    "build:android": {
      "env": ["ANDROID_HOME", "ORG_GRADLE_PROJECT_newArchEnabled"],
      "inputs": [
        "package.json",
        "packages/react-native-nitro-buffered-blob/android/**",
        "!packages/react-native-nitro-buffered-blob/android/build",
        "packages/react-native-nitro-buffered-blob/src/**",
        "examples/*/package.json",
        "examples/*/android/**",
        "!examples/*/android/.gradle",
        "!examples/*/android/build",
        "!examples/*/android/app/build"
      ],
      "outputs": []
    },
    "build:ios": {
      "env": [
        "RCT_NEW_ARCH_ENABLED",
        "RCT_REMOVE_LEGACY_ARCH",
        "RCT_USE_RN_DEP",
        "RCT_USE_PREBUILT_RNCORE"
      ],
      "inputs": [
        "package.json",
        "packages/react-native-nitro-buffered-blob/*.podspec",
        "packages/react-native-nitro-buffered-blob/ios/**",
        "packages/react-native-nitro-buffered-blob/src/**",
        "examples/*/package.json",
        "examples/*/ios/**",
        "!examples/*/ios/build",
        "!examples/*/ios/Pods"
      ],
      "outputs": []
    }
  }
}
